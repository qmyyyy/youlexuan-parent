<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
     http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
     http://www.springframework.org/schema/rabbit
     http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd">


    <!-- 配置rabbitmq服务信息 -->
    <rabbit:connection-factory id="connectionFactory"
                               username="admin" password="admin"
                               host="192.168.188.129" port="5672"/><!--端口：5672，后台管理页面端口：15672-->


    <!--定义rabbit template用于消息的接收和发送 -->
    <rabbit:template id="amqpTemplate"
                     connection-factory="connectionFactory"
                     exchange="youlexuanExchange"/><!--交换器-->
    <rabbit:admin connection-factory="connectionFactory"/>


    <!--搜索服务，订阅-->
    <rabbit:queue name="searchQueue" />
    <!--页面服务，订阅-->
    <rabbit:queue name="pageQueue" />

    <!-- 定义direct类型的交换器，绑定 binding key = queueTest -->
    <rabbit:direct-exchange name="youlexuanExchange">
        <rabbit:bindings>
            <rabbit:binding queue="searchQueue" key="searchQueueKey" />
            <rabbit:binding queue="pageQueue" key="pageQueueKey" />
        </rabbit:bindings>
    </rabbit:direct-exchange>


</beans>